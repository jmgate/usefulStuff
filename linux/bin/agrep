#!/bin/bash
cd ${TRILINOS_DIR}/packages         && \
  banner "Searching Trilinos"       && \
  grep --color -rsIn $@
cd ${DREKAR_BASE_DIR}               && \
  banner "Searching DrekarBase"     && \
  grep --color -rsIn $@
cd ${DREKAR_RESEARCH_DIR}           && \
  banner "Searching DrekarResearch" && \
  grep --color -rsIn $@
cd ${CHARON_DIR}                    && \
  banner "Searching Charon"         && \
  grep --color -rsIn $@
